<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/login1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/background_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-25dp"
        app:layout_constraintTop_toBottomOf="@id/img_login">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/inter_28pt_extrabold"
            android:text="Welcome!"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inputsLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeText">

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/background_inputs"
                android:paddingVertical="12dp"
                android:paddingHorizontal="14dp"
                android:textStyle="bold"
                android:hint="Email Adrress"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_email2"
                android:textColorHint="@color/hint_inputs"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:background="@drawable/background_inputs"
                android:paddingVertical="12dp"
                android:paddingHorizontal="14dp"
                android:textStyle="bold"
                android:hint="Password"
                android:layout_marginTop="16dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_password"
                android:textColorHint="@color/hint_inputs"
                app:layout_constraintTop_toBottomOf="@id/input_email"/>
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/dark_yellow"
                android:fontFamily="@font/inter_28pt_semibold"
                android:textStyle="bold|normal"
                app:layout_constraintTop_toBottomOf="@id/input_password"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="16dp"
                android:textSize="18dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/background_button_fill"
                android:text="login"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_28pt_semibold"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/forgot_password"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/login_button"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not a member?"
                    android:textSize="16dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/hint_inputs"/>
                <TextView
                    android:id="@+id/id_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Now"
                    android:textSize="16dp"
                    android:fontFamily="@font/inter_28pt_extrabold"
                    android:textColor="@color/dark_yellow"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/ligne_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/stroke_inputs"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@id/inputsLogin"/>
        <TextView
            android:id="@+id/text_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or continue with"
            app:layout_constraintTop_toBottomOf="@id/ligne_separator"
            android:textColor="@color/hint_inputs"
            android:textSize="18dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_other"
            android:gravity="center"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_gmail"
                android:layout_marginEnd="30dp"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_facebook"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
